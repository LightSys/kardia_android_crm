<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.CRMApp" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
    </style>

    <style name="CustomThemeOverlayAppCompatLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:spinnerDropDownItemStyle">@style/CustomSpinnerDropDownItemStyle</item>
    </style>

    <style name="CustomSpinnerDropDownItemStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="AppBaseTheme" parent="Base.Theme.CRMApp">
        <!-- This theme has something to do with API Levels -->
        <item name="android:colorBackground">@color/background_material_dark</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- This theme is for non-API specific customizations. -->
    </style>

</resources>
