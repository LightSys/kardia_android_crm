<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/loginLayout"
    tools:context="org.lightsys.crmapp.activities.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/login_title"
        android:textAlignment="center"
        android:textColor="@color/primary_dark"
        android:textSize="48sp"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/kardia_logo"
        android:scaleX="3"
        android:scaleY="3"
        android:src="@drawable/kardiabeat_title_logo"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:padding="10dp"
        android:text="@string/login_message"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="@dimen/abc_text_size_large_material"
        tools:ignore="TextContrastCheck" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="48dp"
        android:textColorHint="@color/primary_dark">

        <EditText
            android:id="@+id/loginUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:autofillHints="username"
            android:ellipsize="start"
            android:hint="@string/username"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="@color/accent"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/loginUsernameError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="4dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/spinnerLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="8dp"
        android:text="@string/spinner_label"
        android:textColor="@color/primary_dark"
        android:textSize="12sp"
        tools:ignore="TextContrastCheck" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="48dp">

        <Spinner
            android:id="@+id/protocolSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="16dp"
            android:entries="@array/protocol_options"
            android:popupBackground="@color/primary_dark" />

    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="48dp"
        android:textColorHint="@color/primary_dark">

        <EditText
            android:id="@+id/loginServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:autofillHints="Username"
            android:ellipsize="start"
            android:hint="@string/server_name"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="@color/accent"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/loginServerError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:layout_marginStart="68dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="48dp"
        android:textColorHint="@color/primary_dark">

        <EditText
            android:id="@+id/loginPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:autofillHints="Port Number"
            android:ellipsize="start"
            android:hint="@string/port_number"
            android:imeOptions="actionGo"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="@color/accent"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/loginPortError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/loginSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:height="48dp"
        android:backgroundTint="@color/primary"
        android:text="@string/login_message"
        tools:ignore="DuplicateSpeakableTextCheck" />

</LinearLayout>
