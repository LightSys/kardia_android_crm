<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/sign_up_table">

    <TableRow
        android:id="@+id/sign_up_row_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">
        <TextView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:text="Name"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_column="1"
            android:layout_weight="3"
            android:gravity="bottom|center_horizontal"
            android:background="@drawable/table_cell_left_right"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_column="2"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="bottom|center_horizontal"
            android:background="@drawable/table_cell_left_right"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:text="Grad Year"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_column="3"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="bottom|center_horizontal"
            android:background="@drawable/table_cell_left_right"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_column="4"
            android:rotation="-90">
            <TextView
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:text="Internship?"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/table_cell_top_bottom"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:text="One Year?"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/table_cell_top_bottom"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:text="Long Term?"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/table_cell_top_bottom"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:text="Spring Break?"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/table_cell_top_bottom"/>
        </LinearLayout>
    </TableRow>
</TableLayout>