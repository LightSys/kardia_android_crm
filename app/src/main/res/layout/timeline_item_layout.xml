<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:listPreferredItemHeight">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_timeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:layout_margin="@dimen/cardview_profile_layout_margin">

    <TextView
        android:id="@+id/timeline_item"
        android:layout_marginLeft="@dimen/profile_listitem_name_marginleft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="#000"
        layout="@layout/divider_small"
        android:padding="@dimen/card_profile_padding" />

    </android.support.v7.widget.CardView>



</LinearLayout>